@model CVMatchPro.Models.Entreprise
@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Profil Entreprise";
}

<div class="container my-5">

    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">👔 Profil de l'entreprise</h1>
        <p class="text-muted">Bienvenue, <span class="fw-semibold">@Model.Nom</span></p>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-end gap-2 mb-4">
        <button class="btn btn-success shadow-sm" data-bs-toggle="modal" data-bs-target="#ajouterOffreModal">
            <i class="bi bi-plus-circle"></i> Créer une offre
        </button>
        <a asp-action="EditProfil" asp-controller="Entreprises" class="btn btn-warning shadow-sm">
            <i class="bi bi-pencil-square"></i> Modifier le profil
        </a>
    </div>

    <!-- Profile Card -->
    <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-5">

            <div class="row align-items-center">
                <!-- Logo -->
                <div class="col-md-3 text-center">
                    @if (!string.IsNullOrEmpty(Model.LogoUrl))
                    {
                        <img src="@Model.LogoUrl" alt="Logo de @Model.Nom" 
                             class="rounded-circle shadow-sm mb-3" 
                             style="max-width: 150px; max-height:150px; object-fit:cover;" />
                    }
                    else
                    {
                        <div class="bg-light text-muted d-flex align-items-center justify-content-center rounded-circle shadow-sm mb-3"
                             style="width:150px; height:150px;">
                            <i class="bi bi-building" style="font-size:3rem;"></i>
                        </div>
                    }
                </div>

                <!-- Infos -->
                <div class="col-md-9">
                    <h3 class="fw-bold text-dark">@Model.Nom</h3>
                    <p class="text-muted mb-4">@Model.Secteur - @Model.Domaine</p>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <p><i class="bi bi-envelope text-primary"></i> <strong>Email :</strong> @Model.Email</p>
                            <p><i class="bi bi-geo-alt text-danger"></i> <strong>Adresse :</strong> @Model.Adresse</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p><i class="bi bi-building text-success"></i> <strong>Ville :</strong> @Model.Ville</p>
                            <p><i class="bi bi-flag text-warning"></i> <strong>Pays :</strong> @Model.Pays</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
<div class="row">
    @foreach (var offre in Model.Offres)
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">@offre.Titre</h5>
                    <p class="card-text"><strong>Description:</strong> @offre.Description</p>
                    <p class="card-text"><strong>Lieu:</strong> @offre.Lieu</p>
                    <p class="card-text"><strong>Date:</strong> @offre.DatePublication.ToShortDateString()</p>
                    <p class="card-text">
                        <strong>Compétences:</strong>
                        @string.Join(", ", offre.CompetencesRequises.Select(c => c.Nom))
                    </p>

                    <div class="d-flex justify-content-between gap-2">
                        <a href="@Url.Action("VoirParOffre", "MatchingResults", new { offreId = offre.Id })"
                           class="btn btn-success">
                            Voir Résultats
                        </a>

                        <a href="@Url.Action("Candidatures", "Entreprises", new { offreId = offre.Id })"
                           class="btn btn-info">
                            Voir les candidatures
                        </a>

                        <button class="btn btn-warning"
                                data-bs-toggle="modal"
                                data-bs-target="#modifierOffreModal-@offre.Id">
                            Modifier
                        </button>

                        <a href="@Url.Action("Supprimer", "Entreprises", new { id = offre.Id })"
                           class="btn btn-danger"
                           onclick="return confirm('Voulez-vous vraiment supprimer cette offre ?');">
                            Supprimer
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Modification -->
        <div class="modal fade" id="modifierOffreModal-@offre.Id" tabindex="-1" aria-labelledby="modifierOffreModalLabel-@offre.Id" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" action="/Entreprises/Modifier">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modifierOffreModalLabel-@offre.Id">Modifier l'offre</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="id" value="@offre.Id" />

                            <div class="mb-3">
                                <label class="form-label">Titre</label>
                                <input type="text" class="form-control" name="Titre" value="@offre.Titre" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" name="Description" required>@offre.Description</textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Lieu</label>
                                <input type="text" class="form-control" name="Lieu" value="@offre.Lieu" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Compétences requises</label>
                                <input type="text" class="form-control" name="CompetencesText"
                                       value="@string.Join(", ", offre.CompetencesRequises.Select(c => c.Nom))" />
                                <small class="form-text text-muted">Séparez les compétences par des virgules.</small>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<!-- Modal Création -->
<div class="modal fade" id="ajouterOffreModal" tabindex="-1" aria-labelledby="ajouterOffreModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Creer" asp-controller="OffreEmplois" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="ajouterOffreModalLabel">Créer une nouvelle offre</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Titre</label>
                        <input type="text" name="Titre" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="Description" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Lieu</label>
                        <input type="text" name="Lieu" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Compétences requises</label>
                        <input type="text" name="CompetencesText" class="form-control" placeholder="Ex: C#, ASP.NET, SQL" />
                        <small class="form-text text-muted">Séparez les compétences par des virgules.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Créer</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                </div>
            </form>
        </div>
    </div>
</div>

