@model CVMatchPro.Models.Entreprise

<h2>Modifier le profil de l'entreprise</h2>

<form asp-action="EditProfil" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Nom</label>
        <input asp-for="Nom" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Domaine</label>
        <input asp-for="Domaine" class="form-control" />
    </div>

    <div class="form-group">
        <label>Secteur</label>
        <input asp-for="Secteur" class="form-control" />
    </div>

    <div class="form-group">
        <label>Adresse</label>
        <input asp-for="Adresse" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ville</label>
        <input asp-for="Ville" class="form-control" />
    </div>

    <div class="form-group">
        <label>Pays</label>
        <input asp-for="Pays" class="form-control" />
    </div>

    <div class="form-group">
        <label>Logo de l'entreprise</label>
        <input type="file" name="logo" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.LogoUrl))
        {
            <img src="@Model.LogoUrl" alt="Logo actuel" style="max-width:150px;" class="mt-2" />
        }
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>
