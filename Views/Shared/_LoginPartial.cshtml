@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Bonjour, @User.Identity?.Name!</span>
        </li>

        @if (ViewData["UserRole"] as string == "Candidat")
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Candidat" asp-action="Profil">Profil</a>
            </li>
        }
        else if (ViewData["UserRole"] as string == "Entreprise")
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Entreprises" asp-action="Profil">Profil</a>
            </li>
        }

        <li class="nav-item">
            <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="nav-link btn btn-link text-dark">Déconnexion</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">S’inscrire</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Connexion</a>
        </li>
    }
</ul>