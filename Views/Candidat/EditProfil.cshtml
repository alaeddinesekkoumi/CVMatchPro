@model CVMatchPro.Models.Candidat
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Modifier mon profil";
}

<div class="container mt-5">
    <h2 class="mb-4">Modifier mon profil</h2>

    <div class="card shadow-sm p-4">
        <form asp-action="EditProfil" method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <div class="col-md-3 text-center">
                    <label>Photo de profil</label><br />
                    <img src="@(Model.PhotoUrl ?? "/images/candidats/default.png")"
                         class="img-thumbnail mb-2" style="width:150px; height:150px; object-fit:cover;" />
                    <input type="file" name="photo" class="form-control" />
                </div>

                <div class="col-md-9">
                    <div class="mb-3">
                        <label class="form-label">Nom</label>
                        <input type="text" class="form-control" name="Nom" value="@Model.Nom" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="Email" value="@Model.Email" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Téléphone</label>
                        <input type="text" class="form-control" name="Telephone" value="@Model.Telephone" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Adresse</label>
                        <input type="text" class="form-control" name="Adresse" value="@Model.Adresse" />
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-save me-2"></i> Enregistrer
            </button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary ms-2">
                Annuler
            </a>
        </form>
    </div>
</div>
