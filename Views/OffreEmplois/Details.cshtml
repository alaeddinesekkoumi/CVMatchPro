@model CVMatchPro.Models.OffreEmploi

@{
    ViewData["Title"] = "Détails de l'offre";
}

<h2>@Model.Titre</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Description :</strong> @Model.Description</p>
        <p><strong>Lieu :</strong> @Model.Lieu</p>
        <p><strong>Date de publication :</strong> @Model.DatePublication.ToShortDateString()</p>

        <p><strong>Compétences requises :</strong></p>
        <ul>
        @if (Model.CompetencesRequises != null && Model.CompetencesRequises.Any())
        {
            foreach (var comp in Model.CompetencesRequises)
            {
                <li>@comp.Nom</li>
            }
        }
        else
        {
            <li>Aucune compétence spécifiée</li>
        }
        </ul>

        @if (Model.Entreprise != null)
        {
            <p><strong>Entreprise :</strong> @Model.Entreprise.Nom</p>
        }
    </div>
</div>

<a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Retour</a>

