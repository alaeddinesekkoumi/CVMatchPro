@model CVMatchPro.Models.OffreEmploi

@{
    ViewData["Title"] = "Détails de l'offre";
}

<h2>@Model.Titre</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Description :</strong> @Model.Description</p>
        <p><strong>Lieu :</strong> @Model.Lieu</p>
        <p><strong>Date de publication :</strong> @Model.DatePublication.ToShortDateString()</p>

        <p><strong>Compétences requises :</strong></p>
        <ul>
            @if (Model.CompetencesRequises != null && Model.CompetencesRequises.Any())
            {
                foreach (var comp in Model.CompetencesRequises)
                {
                    <li>@comp.Nom</li>
                }
            }
            else
            {
                <li>Aucune compétence spécifiée</li>
            }
        </ul>

        @if (Model.Entreprise != null)
        {
            <p><strong>Entreprise :</strong> @Model.Entreprise.Nom</p>
        }

        <!-- ✅ Bouton Postuler uniquement pour les candidats -->
        @if (User.IsInRole("Candidat"))
        {
            <form asp-controller="Candidatures" asp-action="Postuler" method="post" class="mt-3">
                <input type="hidden" name="offreId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send"></i> Postuler
                </button>
            </form>
        }

        <!-- ✅ Message de retour -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info mt-3">
                @TempData["Message"]
            </div>
        }
    </div>
</div>

<a asp-action="Index" asp-controller="Home" class="btn btn-secondary mt-3">Retour</a>
