@model CVMatchPro.Models.OffreEmploi
@{
    var entreprises = ViewBag.Entreprises as List<CVMatchPro.Models.Entreprise>;
}

<h2>Créer une offre d’emploi</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Titre</label>
        <input asp-for="Titre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Lieu</label>
        <input asp-for="Lieu" class="form-control" />
    </div>
    <div class="form-group">
        <label>Entreprise</label>
        <select asp-for="EntrepriseId" class="form-control">
            <option value="">-- Sélectionner --</option>
            @foreach (var e in entreprises)
            {
                <option value="@e.Id">@e.Nom</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Publier</button>
</form>
